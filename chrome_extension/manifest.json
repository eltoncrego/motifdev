{
  "manifest_version": 2,

  "name": "Spotify Tags",
  "description": "An extension to help organize your music and spark joy.",
  "version": "1.0",

  "browser_action": {
    "default_icon": {
      "16": "assets/img/tags-icon@16.png",
      "32": "assets/img/tags-icon@32.png",
      "48": "assets/img/tags-icon@48.png",
      "128": "assets/img/tags-icon@128.png"
    },
    "default_popup": "src/main/app/templates/default.html"
  },
  "content_scripts": [{
    "css": ["src/main/app/styles/main-app.css"],
    "js": [
      "src/lib/jquery-min.js",
      "src/main/app/js/main-app.js"
    ],
    "matches": ["https://open.spotify.com/*"]
  }],

  "permissions": [
    "activeTab"
  ]
}
